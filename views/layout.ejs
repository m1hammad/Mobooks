<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/main.css">
    <title>MoBooks</title>
</head>
<body>
     <br>
    <nav>
        <a href="/" class="btn btn-outline-primary">home</a>
        <% if(currentUser) {%>
            <a href="/profile/<%= currentUser._id %> " class="btn btn-outline-primary">My Profile</a>
        <% } %> 
        <% if(currentUser) {%>
            <a href="/auth/logout" class="btn btn-outline-primary">Logout</a>
        <% } else{ %> 
            <a href="/auth/signin" class="btn btn-outline-primary" id="login">Login</a>
        <% } %> 
    </nav><hr><br>
    
     <% if(alerts.validationErrors){ %> 
        <% alerts.validationErrors.forEach(function(msg){ %>
            <div class="alert alert-danger">
                Your <%= msg.param %> has <%= msg.msg %> </div>
                <% }) } %> 
    <% if(alerts.success){ %> 
        <% alerts.success.forEach(function(msg){ %>
            <div class="alert alert-success"><%= msg %> </div>
        <% }) %>  
    <% } else if(alerts.error){ %> 
        <% alerts.error.forEach(function(msg){ %>
            <div class="alert alert-danger"><%= msg %> </div>
        <% }) %> 
    <% } %>


    <%- body %> 

    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>
    <script src="../js/main.js"></script>
</body>
</html>